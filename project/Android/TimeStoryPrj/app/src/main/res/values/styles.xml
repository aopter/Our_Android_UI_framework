<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="normalBtn">
        <item name="android:padding">5dp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@mipmap/button</item>
        <item name="android:textColor">@color/ourDynastyRed</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="normalBtnT">
        <item name="android:alpha">0.9</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@mipmap/button</item>
        <item name="android:textColor">@color/ourDynastyRed</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="loginEtStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">#bfffffff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loginBtn">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/ourDynastyRed</item>
        <item name="android:background">@mipmap/bg_login_kl</item>
    </style>

    <style name="settingBtn">
        <item name="android:alpha">0.8</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#B22222</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="settingBtnChooice">
        <item name="android:alpha">0.8</item>
        <item name="android:background">@color/ourDynastyRed</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#B22222</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="settingContent">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tvSelectProblemType">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ourDynastyRed</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="ivOptionPic">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
    </style>
    <style name="ivOptionCheck">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>


    <style name="tv_title_lk">
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
