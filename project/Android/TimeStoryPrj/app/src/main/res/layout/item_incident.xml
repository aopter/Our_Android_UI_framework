<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_timeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_top_line"
            android:layout_width="55dp"
            android:layout_height="4dp"
            android:background="@color/ourDynastyRed"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_dot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_top_line"
            android:background="@drawable/timeline"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="4dp"
            android:layout_toRightOf="@+id/tv_dot"
            android:layout_centerVertical="true"
            android:background="@color/ourDynastyRed"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_line"
            android:layout_marginLeft="62dp"
            android:layout_width="4dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@color/ourDynastyRed"/>

        <TextView
            android:id="@+id/tv_incident_name"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>
        <ImageView
            android:id="@+id/iv_incident_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="27dp"
            android:layout_below="@+id/tv_incident_name" />
    </RelativeLayout>
</LinearLayout>