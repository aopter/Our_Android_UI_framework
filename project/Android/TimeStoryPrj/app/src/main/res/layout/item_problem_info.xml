                android:layout_margin="10dp"
                android:text="题目：你喜欢这个界面吗"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/optionA"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_optionA"
                        style="@style/ivOptionPic"
                        android:layout_height="117dp"
                        android:src="@mipmap/select_lian" />

                    <TextView
                        android:id="@+id/tv_optionA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="喜欢" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optionB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView

                        android:id="@+id/iv_optionB"
                        style="@style/ivOptionPic"

                        android:src="@mipmap/select_lian" />

                    <TextView
                        android:id="@+id/tv_optionB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="非常喜欢" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optionC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_optionC"
                        style="@style/ivOptionPic"

                        android:src="@mipmap/select_lian" />

                    <TextView
                        android:id="@+id/tv_optionC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="太喜欢" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optionD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_optionD"
                        style="@style/ivOptionPic"
                        android:src="@mipmap/select_lian" />

                    <TextView
                        android:id="@+id/tv_optionD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="好看死了" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

