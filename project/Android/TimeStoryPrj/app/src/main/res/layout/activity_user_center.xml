<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_problem_info"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <!-- 头像、名称-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="60dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_gravity="center"
                android:text="小妹"
                android:id="@+id/tv_name"
                style="@style/normalBtn"
                android:textSize="8sp"
                android:layout_height="15dp"
                android:layout_width="45dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- 等级、经验-->


        <!-- 积分 -->


        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
           />

            <TextView
                android:text="举人"
                android:id="@+id/tv_level"
                style="@style/normalBtn"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/tv_point"
                style="@style/normalBtn"
                android:text="积分"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- 抽卡 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/btn_card"
                style="@style/normalBtn"
                android:text="抽卡"
                android:textColor="@android:color/white" />

        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/btn_go_dynasty"
                style="@style/normalBtn"
                android:text="出行"
                android:textColor="@android:color/white" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/btn_set"
                style="@style/normalBtn"
                android:text="设置"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_above="@+id/user_center_buttom"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/lv_user_list"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:alpha="0.8"
                android:background="#FFF" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <net.onest.timestoryprj.customview.CusTextView
                android:alpha="0.9"
                android:background="@color/ourDynastyRed"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#fff"
                android:padding="2dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="历史上的今天"/>
            <LinearLayout
                android:id="@+id/ll_his"
                android:alpha="0.8"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/re_his_today"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/user_center_buttom"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <!-- 我的卡片 -->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="60dp">

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_my_card"
                style="@style/normalBtn"
                android:text="我的卡片"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- 我的收藏 -->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_my_collections"
                style="@style/normalBtn"
                android:text="我的收藏" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/bg_man"/>
</RelativeLayout>