<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="16dp"
    android:paddingLeft="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_user_center"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <!-- 头像、名称-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="60dp"
                android:layout_height="50dp" />

            <ProgressBar
                android:layout_marginTop="5dp"
                android:id="@+id/experience_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/progressbar_style" />
        </LinearLayout>

        <!-- 等级、经验-->


        <!-- 积分 -->


        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
           />

            <TextView
                android:text="举人"
                android:id="@+id/tv_level"
                style="@style/normalBtn"/>
        </LinearLayout>
        <!-- 抽卡 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/btn_card"
                style="@style/normalBtn"
                android:text="抽卡"/>
        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/btn_go_dynasty"
                style="@style/normalBtn"
                android:text="出行"/>
        </LinearLayout>

        <!-- 积分 -->
        <RelativeLayout
            android:id="@+id/rl_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">


            <TextView
                android:paddingLeft="23dp"
                android:gravity="center"
                android:paddingRight="20dp"
                android:id="@+id/tv_point"
                style="@style/normalBtnT"
                android:text="200" />

            <Button
                android:alpha="0.6"
                android:layout_marginRight="7dp"
                android:layout_alignRight="@+id/tv_point"
                android:layout_centerVertical="true"
                android:id="@+id/btn_plus"
                android:layout_width="16dp"
                android:layout_height="17dp"
                android:background="@mipmap/plust" />
            <TextView
                android:textSize="10sp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:textColor="@color/ourDynastyRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分:  "/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">


<!--            <RelativeLayout-->
<!--                android:paddingRight="10dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center">-->


                <Button
                    android:id="@+id/btn_set"
                    style="@style/normalBtn"
                    android:text="设置" />
<!--            </RelativeLayout>-->
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/user_center_buttom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <net.onest.timestoryprj.customview.CusTextView

                android:alpha="0.9"
                android:background="@color/ourDynastyRed"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="#fff"
                android:padding="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="排行榜"/>
            <ListView
                android:id="@+id/lv_user_list"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="#FFF" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <net.onest.timestoryprj.customview.CusTextView

                android:alpha="0.9"
                android:background="@color/ourDynastyRed"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="#fff"
                android:padding="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="历史上的今天"/>
            <LinearLayout
                android:id="@+id/ll_his"
                android:alpha="0.8"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/re_his_today"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/user_center_buttom"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <!-- 我的卡片 -->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="60dp">

            <Button
                android:id="@+id/btn_my_card"
                style="@style/normalBtn"
                android:text="我的卡片"/>
        </LinearLayout>

        <!-- 我的收藏 -->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">
            <Button
                android:id="@+id/btn_my_collections"
                style="@style/normalBtn"
                android:text="我的收藏" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/bg_man"/>
</RelativeLayout>