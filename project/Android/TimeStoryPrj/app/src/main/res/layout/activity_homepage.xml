<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.dynasty.HomepageActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@mipmap/bg_home_title"
        android:orientation="horizontal"
        android:padding="5dp">

        <!-- 头像、名称-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/test_header"
                android:id="@+id/iv_header"
                android:layout_width="60dp"
                android:layout_height="50dp" />

            <ProgressBar
                android:layout_marginTop="5dp"
                android:id="@+id/experience_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/progressbar_style" />
        </LinearLayout>

        <!-- 等级、经验-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/tv_level"
                style="@style/normalBtn"
                android:text="秀才" />


        </LinearLayout>
        <!-- 积分 -->
        <RelativeLayout
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">
            <TextView
                android:drawableLeft="@mipmap/coun_icon_l"
                android:id="@+id/tv_point"
                android:padding="2dp"
                style="@style/normalBtn"
                android:text="8888" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/plus" />
        </RelativeLayout>
        <!-- 抽卡 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/btn_card"
                style="@style/normalBtn"
                android:text="抽卡" />
        </LinearLayout>

        <!-- 我的卡片 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/btn_my_card"
                style="@style/normalBtn"
                android:text="我的卡片" />
        </LinearLayout>

        <!-- 我的收藏 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/btn_my_collections"
                style="@style/normalBtn"
                android:text="我的收藏" />
        </LinearLayout>

        <!-- 音量-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_voice"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_settings"
                android:background="@mipmap/novoice" />

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/settings" />
        </RelativeLayout>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hsv_dynasty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_home_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>