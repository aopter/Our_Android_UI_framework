<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rl_screen"
    tools:context=".activity.dynasty.HomepageActivity">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/bg_home_title"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <!-- 头像、名称-->
            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/test_header" />

                <ProgressBar
                    android:id="@+id/experience_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:progress="20"
                    android:progressDrawable="@drawable/progressbar_style" />
            </LinearLayout>

            <!-- 等级、经验-->
            <RelativeLayout
                android:layout_toRightOf="@+id/ll_header"
                android:id="@+id/relative_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/tv_level"
                    style="@style/normalBtn"
                    android:text="秀才" />


            </RelativeLayout>
            <!-- 积分 -->
            <RelativeLayout
                android:layout_toRightOf="@+id/relative_progress"
                android:id="@+id/rl_point"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/tv_point"
                    style="@style/normalBtn"
                    android:drawableLeft="@mipmap/coun_icon_l"
                    android:padding="2dp"
                    android:text="8888" />

                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/plus" />
            </RelativeLayout>
            <!-- 抽卡 -->
            <LinearLayout
                android:layout_toRightOf="@id/rl_point"
                android:id="@+id/ll_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/btn_card"
                    style="@style/normalBtn"
                    android:text="抽卡" />
            </LinearLayout>

            <!-- 我的卡片 -->
            <LinearLayout
                android:id="@+id/ll_mycard"
                android:layout_toRightOf="@+id/ll_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/btn_my_card"
                    style="@style/normalBtn"
                    android:text="我的卡片" />
            </LinearLayout>

            <!-- 我的收藏 -->
            <LinearLayout
                android:id="@+id/ll_my_collections"
                android:layout_toRightOf="@+id/ll_mycard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/btn_my_collections"
                    style="@style/normalBtn"
                    android:text="我的收藏" />
            </LinearLayout>

            <!-- 音量-->
            <RelativeLayout
                android:layout_toRightOf="@+id/ll_my_collections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_voice"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/btn_settings"
                    android:background="@mipmap/novoice" />

                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/settings" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_below="@+id/ll_title"
        android:id="@+id/hsv_dynasty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_home_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>