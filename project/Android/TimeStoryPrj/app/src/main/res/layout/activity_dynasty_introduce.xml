<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_in"
    android:orientation="vertical"
    tools:context=".activity.dynasty.DynastyIntroduceActivity">


    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/ll_intro_word"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_pre"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/back" />

            <TextView
                android:shadowRadius="3"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowColor="#bb000000"
                android:id="@+id/tv_dynasty_name"
                android:layout_width="50dp"
                android:layout_height="180dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:alpha="0.7"
                android:background="@mipmap/bg_1"
                android:gravity="center"
                android:lineSpacingExtra="10dp"
                android:padding="5dp"
                android:textColor="#77000000"
                android:textSize="30sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_below"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ll_intro_word"
            android:alpha="0.7"
            android:background="@mipmap/bg_container"
            android:padding="18dp">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
            <LinearLayout
                android:id="@+id/ll_white"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="25dp"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/tv_dynasty_intro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fadeScrollbars="false"
                    android:lineSpacingExtra="3dp"
                    android:scrollbars="vertical"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_below"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="15dp">

            <Button
                android:id="@+id/btn_img"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/btn_questions"
                android:alpha="0.7"
                android:background="@drawable/cornert"
                android:text="进入全景图"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_questions"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/btn_details"
                android:alpha="0.7"
                android:background="@drawable/cornert"
                android:text="朝代知多少"
                android:textColor="#fcf5e9"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_details"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:alpha="0.7"
                android:background="@drawable/cornert"
                android:text="进入详情"
                android:textColor="#fcf5e9"
                android:textSize="16sp" />


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>