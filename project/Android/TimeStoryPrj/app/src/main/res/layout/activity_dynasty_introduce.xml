<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_in"
    android:orientation="vertical"
    tools:context=".activity.dynasty.DynastyIntroduceActivity">


    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/ll_intro_word"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_pre"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="35dp"
                android:background="@mipmap/back" />

            <TextView
                android:id="@+id/tv_dynasty_name"
                android:layout_width="50dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:alpha="0.7"
                android:gravity="center"
                android:lineSpacingExtra="10dp"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingBottom="15dp"
                android:textColor="#000"
                android:textSize="35sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_below"
            android:layout_toRightOf="@+id/ll_intro_word"
            android:alpha="0.7"
            android:background="@mipmap/bg_container"
            android:padding="18dp">


            <LinearLayout
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="25dp"
                android:paddingLeft="5dp">

                <TextView
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:id="@+id/tv_dynasty_intro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_below"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="15dp">

            <Button
                android:id="@+id/btn_questions"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/btn_details"
                android:alpha="0.7"
                android:background="@drawable/cornert"
                android:text="朝代知多少"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_details"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/btn_img"
                android:alpha="0.7"
                android:background="@drawable/cornert"
                android:text="进入详情"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_img"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:alpha="0.7"
                android:background="@drawable/cornert"
                android:text="进入全景图"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>