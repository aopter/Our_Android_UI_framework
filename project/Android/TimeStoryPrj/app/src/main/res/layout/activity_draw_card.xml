<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.85"
    android:background="@mipmap/bg_drawcard"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@android:color/black"
        android:padding="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <net.onest.timestoryprj.customview.CusTextView
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="点击看看获取了什么卡片吧"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tip"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/draw_card_show"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/exam"
                    android:padding="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/to_last_view"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:alpha="0.9"
                android:background="@android:color/holo_red_dark"
                android:text="返回上一页"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:alpha="0.6"
            android:background="@color/colorTitle"
            android:padding="10dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:src="@mipmap/back" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_container"
            android:orientation="vertical">

            <net.onest.timestoryprj.customview.CusTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:text="请在下面挑选一张图片吧。"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <!--四张卡片应该为一个自定义View-->
                <ImageView
                    android:id="@+id/card1"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:src="@mipmap/examplecard" />

                <ImageView
                    android:id="@+id/card2"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:src="@mipmap/examplecard" />

                <ImageView
                    android:id="@+id/card3"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:src="@mipmap/examplecard" />

                <ImageView
                    android:id="@+id/card4"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:src="@mipmap/examplecard" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>