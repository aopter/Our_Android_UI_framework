<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/intro"
    android:orientation="horizontal"
    tools:context=".dialog.dynasty.EventDialogActivity">

    <LinearLayout
        android:paddingLeft="18dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/btn_pre2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/back" />
        <TextView
            android:id="@+id/tv_big_word2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/ourDynastyRed"
            android:textSize="32sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_denglong1"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="55dp"/>
        <LinearLayout
            android:id="@+id/ll_pangbai"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="240dp"
            android:layout_height="230dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/pangbai1">

            <ScrollView
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
             android:layout_marginTop="19dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/sv_scroll1"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_dialog_intro"
                    android:layout_width="210dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:scrollbars="vertical"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </ScrollView>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_dialog_intro_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sv_scroll"
            android:layout_above="@+id/ll_below"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <RelativeLayout
                android:id="@+id/rl_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_marginBottom="8dp"
                    android:id="@+id/tv_dialog1"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/conversation1"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:textColor="@android:color/black" />

            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_below"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dialog1_img"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <ImageView
                android:id="@+id/iv_dialog2_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>