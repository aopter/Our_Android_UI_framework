<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/intro"
    android:orientation="horizontal"
    tools:context=".dialog.dynasty.EventDialogActivity">

    <Button
        android:id="@+id/btn_pre2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_big_word2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/ourDynastyRed"
            android:textSize="35sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ScrollView
            android:id="@+id/sv_scroll1"
            android:layout_width="210dp"
            android:layout_height="230dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/pangbai">

            <TextView
                android:id="@+id/tv_dialog_intro"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginBottom="20dp"
                android:clickable="false"
                android:padding="15dp"
                android:scrollbars="vertical"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </ScrollView>

        <ImageView
            android:id="@+id/iv_dialog_intro_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sv_scroll"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center">

            <RelativeLayout
                android:id="@+id/rl_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_dialog1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/conversation1"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:textColor="#595959" />

            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dialog1_img"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <ImageView
                android:id="@+id/iv_dialog2_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>