<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.user.UpdateSignatureActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp">
        <ImageView
            android:id="@+id/iv_back2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_back2"
            android:text="更改签名"/>
        <Button
            android:id="@+id/btn_signature_save"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="保存"
            android:background="@mipmap/button"
            android:textColor="@color/ourDynastyRed"
            android:textSize="22sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/et_signature"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"/>

</LinearLayout>