<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/set"
    android:orientation="horizontal"
    android:id="@+id/mainlayout"
    tools:context=".activity.user.SettingActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:orientation="vertical">
        <TextView
            android:alpha="0.8"
            android:gravity="center"
            android:text="      "
            style="@style/settingBtn" />
        <Button
            android:id="@+id/btn_person"
            android:text="个人资料"
            style="@style/settingBtn" />
        <Button
            android:id="@+id/btn_voice_set"
            android:text="音量设置"
            style="@style/settingBtn"/>
        <Button
            android:id="@+id/btn_rule"
            style="@style/settingBtn"
            android:text="查看规则"/>
        <Button
            android:id="@+id/btn_problem"
            style="@style/settingBtn"
            android:text="反馈问题"/>
        <Button
            android:id="@+id/btn_exit_login"
            style="@style/settingBtn"
            android:text="退出登录"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightlinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0b000000"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>